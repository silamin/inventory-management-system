@using SEP3_T1_BlazorUI.Presentation.Managers
@inject LoginManager loginManager
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<style>
    /* Topbar styles */
    .top-row {
        height: 3.5rem;
        background-color: #2c3e50;
        color: white;
        display: flex;
        align-items: center;
        padding: 0 1rem;
        justify-content: space-between;
        position: sticky;
        top: 0;
        z-index: 10;
    }

    .navbar-toggler {
        background-color: rgba(255, 255, 255, 0.1);
        border: none;
        color: white;
    }

    .navbar-brand {
        font-size: 1.25rem;
        font-weight: bold;
        display: flex;
        align-items: center;
    }

    .navbar-toggler-icon {
        font-size: 1.5rem;
    }

    /* Sidebar styles */
    .nav-scrollable {
        width: 250px;
        background-color: #1f2937;
        top: 0;
        left: 0;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        padding-top: 1rem;
        transition: all 0.4s ease-in-out;
    }

    .nav-scrollable.show {
        transform: translateX(0);
    }

    .nav-item {
        margin-bottom: 0.5rem;
    }

    .nav-item ::deep a {
        color: #d7d7d7;
        display: flex;
        align-items: center;
        padding: 0.75rem 1rem;
        text-decoration: none;
        border-radius: 8px;
        transition: all 0.3s ease-in-out;
        position: relative;
        overflow: hidden;
    }

    .nav-item ::deep a::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 0%;
        height: 100%;
        background: rgba(255, 255, 255, 0.1);
        transition: width 0.3s ease-in-out;
        z-index: -1;
    }

    .nav-item ::deep a:hover::before {
        width: 100%;
    }

    .nav-item ::deep a.active::before {
        width: 100%;
    }

    .nav-item ::deep a.active {
        background-color: #007bff !important;
        color: white;
    }

    .nav-item ::deep a:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: white;
    }

    .nav-icon {
        font-size: 1.25rem;
        margin-right: 0.75rem;
    }

    .nav-label {
        font-size: 1rem;
    }

    /* Button styles */
    .btn.nav-link {
        background-color: transparent;
        border: none;
        color: #d7d7d7;
        width: 100%;
        text-align: left;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .btn.nav-link:hover {
        background-color: #dc3545;
        color: white;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .nav-scrollable {
            position: absolute;
            width: 100%;
            transform: translateX(-100%);
            z-index: 10;
        }

        .nav-scrollable.show {
            transform: translateX(0);
        }

        .top-row {
            justify-content: space-between;
        }
    }

    @@media (min-width: 769px) {
        .navbar-toggler {
            display: none;
        }

        .nav-scrollable {
            transform: translateX(0) !important;
        }
    }
</style>

<!-- Topbar -->
<div class="top-row">
    <a class="navbar-brand" href="/">
        <i class="fas fa-cogs me-2"></i> SEP03
    </a>
    <button class="navbar-toggler" type="button" @onclick="ToggleSidebar">
        <i class="fas fa-bars navbar-toggler-icon"></i>
    </button>
</div>

<!-- Sidebar -->
<div class="nav-scrollable" id="sidebar">
    <nav class="nav flex-column">
        <div class="nav-item">
            <NavLink class="nav-link" href="/inventory-dashboard">
                <i class="fas fa-home nav-icon"></i> 
                <span class="nav-label">Home</span>
            </NavLink>
        </div>

        <div class="nav-item">
            <NavLink class="nav-link" href="/order-history">
                <i class="fas fa-receipt nav-icon"></i> 
                <span class="nav-label">Orders</span>
            </NavLink>
        </div>

        <div class="nav-item">
            <NavLink class="nav-link" href="/add-item">
                <i class="fas fa-plus-circle nav-icon"></i> 
                <span class="nav-label">Add Item</span>
            </NavLink>
        </div>

        <div class="nav-item">
            <NavLink class="nav-link" href="/manage-users">
                <i class="fas fa-users-cog nav-icon"></i> 
                <span class="nav-label">Manage Users</span>
            </NavLink>
        </div>

        <div class="nav-item">
            <NavLink class="nav-link" href="/add-user">
                <i class="fas fa-user-plus nav-icon"></i> 
                <span class="nav-label">Add User</span>
            </NavLink>
        </div>

        <div class="nav-item">
            <button class="btn nav-link text-start" @onclick="LogoutAsync">
                <i class="fas fa-sign-out-alt nav-icon"></i> 
                <span class="nav-label">Log out</span>
            </button>
        </div>
    </nav>
</div>

@code {
    private async Task ToggleSidebar()
    {
        await JSRuntime.InvokeVoidAsync("toggleSidebar");
    }

    private async Task LogoutAsync()
    {
        NavigationManager.NavigateTo("/login", true);
    }
}
